@model BlogCore.Models.Viewmodels.HomeVM
<!-- Slider -->
<div id="sliderImagenes" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @foreach (var slider in Model.Sliders)
        {
            if (slider.Estado)
            {
                var itemClass = slider == Model.Sliders.FirstOrDefault(s => s.Estado) ? "carousel-item active" : "carousel-item";
                <div class="@itemClass">
                    <!-- Imagen con carga perezosa -->
                    <img src="@Url.Content(slider.urlImagen)" class="d-block w-100" loading="lazy">
                    <h1 class="text-white text-center bg-dark py-1">@Html.Raw(slider.Nombre)</h1>
                </div>
            }
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#sliderImagenes" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#sliderImagenes" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
