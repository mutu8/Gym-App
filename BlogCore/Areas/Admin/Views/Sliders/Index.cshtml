@{
    ViewData["Title"] = "Lista de sliders";
}

<style>
    .align-middle {
        vertical-align: middle !important;
    }
</style>

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de sliders</h2>
        </div>
        <div class="col-4 d-flex justify-content-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> Crear nuevo slider
            </a>
        </div>
    </div>
   
    <br />
    <br />
    <table id="tblSliders" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th class="align-middle">Id</th>
                <th class="align-middle">Nombre</th>
                <th class="align-middle">Estado</th>
                <th class="align-middle">Imagen</th>
                <th class="align-middle">Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/slider.js">

    </script>
}