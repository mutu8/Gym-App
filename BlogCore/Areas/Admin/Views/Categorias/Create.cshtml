@model BlogCore.Models.Categoria

@{
    ViewData["Title"] = "Crear categoría";
}

<br />
<br />
<h3 class="text-center">Crear una nueva categoría</h3>
<form method="POST" asp-action="Create">
    <div class="row px-4 py-3 offset-1 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-10 offset-1 mt-4">
            <div class="form-group row mb-3">
                <div class="col-4">
                    <label asp-for="Nombre"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <div class="col-4">
                    <label asp-for="Orden"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Orden" class="form-control" placeholder="Ingresa el orden" />
                    <span asp-validation-for="Orden" class="text-danger"></span>
                </div>
            </div>

            <div class="row justify-content-center mt-4 mb-3">
                <div class="col-auto">
                    <partial name="_VistaCrearVolver" />
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
