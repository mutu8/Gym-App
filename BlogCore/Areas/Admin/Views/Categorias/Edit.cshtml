@model BlogCore.Models.Categoria

@{
    ViewData["Title"] = "Editar categoría";
}

<br />
<br />
<h3 class="text-center">Editar categoría</h3>
<form method="POST" asp-action="Edit">
    <div class="row px-4 py-3 offset-1 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-10 offset-1 mt-4">
            <div class="form-group row mb-3">
                <div class="col-4">
                    <label asp-for="Nombre"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <div class="col-4">
                    <label asp-for="Orden"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Orden" class="form-control" placeholder="Ingresa el orden" />
                    <span asp-validation-for="Orden" class="text-danger"></span>
                </div>
            </div>


            <div class="d-flex gap-3">
                <button type="submit" class="btn btn-primary px-4 py-2">Editar categoría</button>
                <a asp-action="Index" class="btn btn-success px-4 py-2">Volver atrás</a>
            </div>

        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
