@model BlogCore.Models.Articulo

@{
    ViewData["Title"] = "Detalle del artículo";
    // Convertir la cadena de datetime
    DateTime fechacCreacion = Convert.ToDateTime(Model.FechaCreacion);
    string fecha = fechacCreacion.ToString("dd/MM/yyyy");
}

<div class="card mx-auto card-no-border pt-5" style="max-width: 100%; width: 80%; min-width: 400px;">
    <!-- Ajusté el ancho máximo y el mínimo -->
    <div class="card-header card-header-transparent text-light">
        <div class="row">
            <div class="col-12">
                <h1 class="text-primary text-center">@Model.Nombre</h1>
            </div>
            <div class="col-12">
                <p class="text-center text-primary">@fecha</p>
            </div>
        </div>
    </div>

    <div class="card-body">
        <div class="col-12">
            <img src="@Model.urlImagen" class="img-fluid mx-auto d-block" alt="Imagen del artículo" /> <!-- img-fluid para imagen responsiva -->
            <p class="text-black mt-3">@Html.Raw(Model.Descripcion)</p>
        </div>
    </div>

    <div class="card-header-transparent">
        <div class="row">
            <div class="col-12 col-md-6 pb-1">
                <a asp-action="Index" class="btn btn-success btn-sm">Volver atrás</a>
            </div>
        </div>
    </div>
</div>
