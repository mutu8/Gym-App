@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Confirmación de restablecimiento de contraseña";
}

<header class="text-center mt-5">
    <h1 class="display-4 text-success">@ViewData["Title"]</h1>
    <hr />
</header>

<div class="row">
    <div class="col-md-6 offset-md-3 text-center">
        <p class="h5 text-muted">
            Tu contraseña ha sido restablecida correctamente. Por favor, <a asp-page="./Login" class="btn btn-link text-primary">haz clic aquí para iniciar sesión</a>.
        </p>
    </div>
</div>
