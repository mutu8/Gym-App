@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Cambiar contraseña";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="container my-4">
    <h3 class="text-center mb-4">@ViewData["Title"]</h3>

    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form id="change-password-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <!-- Contraseña antigua -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Por favor, ingresa tu contraseña antigua." />
                    <label asp-for="Input.OldPassword" class="form-label">Contraseña antigua</label>
                    <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                </div>

                <!-- Nueva contraseña -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Por favor, ingresa tu nueva contraseña." />
                    <label asp-for="Input.NewPassword" class="form-label">Nueva contraseña</label>
                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                </div>

                <!-- Confirmación de nueva contraseña -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Por favor, confirma tu nueva contraseña." />
                    <label asp-for="Input.ConfirmPassword" class="form-label">Confirmar contraseña</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- Botón para actualizar contraseña con tamaño moderado -->
                <button type="submit" class="w-100 btn btn-primary">Actualizar contraseña</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
