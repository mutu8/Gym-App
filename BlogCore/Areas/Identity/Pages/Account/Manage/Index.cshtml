@page
@model IndexModel
@{
    ViewData["Title"] = "Perfil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container my-4">
    <h3 class="text-center mb-4">@ViewData["Title"]</h3>

    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form id="profile-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <!-- Nombre de usuario (deshabilitado) -->
                <div class="form-floating mb-3">
                    <input asp-for="Username" class="form-control" placeholder="Por favor, elige tu nombre de usuario." disabled />
                    <label asp-for="Username" class="form-label">Nombre de usuario</label>
                </div>

                <!-- Número de teléfono -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Por favor, ingresa tu número de teléfono." />
                    <label asp-for="Input.PhoneNumber" class="form-label">Número de teléfono</label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>

                <!-- Botón de guardar con tamaño moderado -->
                <button id="update-profile-button" type="submit" class="w-100 btn btn-primary">Guardar</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
